{
  "name": "touch-x",
  "version": "0.1.0",
  "description": "Drag/Swipe Library For Mobile/Desktop Devices",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elements-x/touch-x.git"
  },
  "scripts": {
    "build": "rm -rf dist && npm run build:lib && npm run build:docs",
    "build:lib": "webpack --config src/webpack.config.js --mode=production",
    "build:docs": "webpack --config docs-src/webpack.config.js --mode=production",
    "start": "webpack serve --config docs-src/webpack.config.js --mode=development --open",
    "stop": "kill-port 8080",
    "eslint": "eslint src lib --fix && git add"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.com/"
  },
  "preversion": "npm run build",
  "pre-commit": [
    "eslint"
  ],
  "files": [
    "dist"
  ],
  "keywords": [
    "javascript",
    "js",
    "events",
    "DOM",
    "html",
    "swipe",
    "touch",
    "mobile"
  ],
  "author": "allenhwkim@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/elements-x/touch-x/issues"
  },
  "homepage": "https://github.com/elements-x/touch-x#readme",
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "babel-loader": "^8.2.2",
    "body-scroll-lock": "^4.0.0-beta.0",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "copy-webpack-plugin": "^9.0.1",
    "elements-x": "^1.13.4",
    "html-webpack-plugin": "^5.3.2",
    "http-server": "^13.0.0",
    "kill-port": "^1.6.1",
    "terser-webpack-plugin": "^5.1.4",
    "webpack": "^5.50.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^3.11.2"
  }
}
